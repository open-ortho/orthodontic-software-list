{% extends "layout.html.j2" %}

{% block title %}{{ software.product }} - {{ site_title }}{% endblock %}

{% block content %}
<h2>{{ software.product }}</h2>
<p>by {{ software.developer }}</p>
<section>
  <h3>Description</h3>
  <p>{{ software.description }}</p>
</section>
<section>
  <h3>DICOM Interoperability</h3>
  <table>
    <thead>
      <tr>
        <th>Feature</th>
        <th>Filesystem</th>
        <th>Network</th>
        <th>Bulk</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>DICOM Import</td>
        <td>{{ software.dicom_import_filesystem }}</td>
        <td>{{ software.dicom_import_network }}</td>
        <td>{{ software.dicom_import_bulk }}</td>
      </tr>
      <tr>
        <td>DICOM Export</td>
        <td>{{ software.dicom_export_filesystem }}</td>
        <td>{{ software.dicom_export_network }}</td>
        <td>{{ software.dicom_export_bulk }}</td>
      </tr>
    </tbody>
  </table>
</section>
<section>
  <h3>Additional Details</h3>
  <ul>
    <li><strong>DICOM Conformance:</strong> {{ software.dicom_conformance }}</li>
    <li><strong>HL7/FHIR Support:</strong> {{ software.hl7_fhir }}</li>
    <li><strong>Interoperability Friendly:</strong> {{ software.i14y_friendly }}</li>
    <li><strong>Last Updated:</strong> {{ software.updated }}</li>
    <li><strong>Reference:</strong> {{ software.reference }}</li>
  </ul>
</section>
<p><a href="../index.html" class="btn">Back to Software List</a></p>
{% endblock %}